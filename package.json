{
  "name": "mdod",
  "version": "0.0.3",
  "license": "MIT",
  "description": "Generic markdown renderer, capable of handling single files and directories with inter-linked documents.",
  "author": "Mircea Cristian Mihalache <me@f3rno.com>",
  "bin": {
    "mdod": "cli.js"
  },
  "engines": {
    "node": ">=17.8.0"
  },
  "files": [
    "index.js",
    "cli.js",
    "lib/**"
  ],
  "directories": {
    "lib": "lib",
    "docs": "docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/f3rno64/mdod.git"
  },
  "homepage": "https://github.com/f3rno64/mdod",
  "bugs": {
    "url": "https://github.com/f3rno64/mdod/issues"
  },
  "keywords": [
    "markdown",
    "renderer",
    "utility",
    "cli",
    "markdown-it",
    "fs"
  ],
  "scripts": {
    "docs": "rm -rf DOCUMENTATION.md && ./node_modules/.bin/jsdoc2md -f index.js 'lib/**/*.js' > DOCUMENTATION.md",
    "readme": "rm README.md && node scripts/gen_readme.js",
    "lint": "./node_modules/.bin/eslint package.json '*.js' lib test",
    "release": "npm run update-version && git push origin master --follow-tags && npm publish",
    "test": "npm run lint && npm run unit",
    "unit": "NODE_ENV=test ./node_modules/.bin/mocha --recursive",
    "update-deps": "./node_modules/.bin/updates -u -g -c",
    "update-version": "./node_modules/.bin/standard-version"
  },
  "dependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "bluebird": "^3.7.2",
    "colors": "^1.4.0",
    "dotenv": "^16.0.0",
    "f3rno64-lib": "^0.0.7",
    "highlight.js": "^11.5.0",
    "lodash": "^4.17.21",
    "markdown-it": "^12.3.2",
    "markdown-it-github": "^0.5.0",
    "p-iteration": "^1.1.8",
    "pug": "^3.0.2",
    "signale": "^1.4.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jsdoc-to-markdown": "^7.1.1",
    "mocha": "^9.2.2",
    "serve-markdown-it-lib": "^1.0.5",
    "standard-version": "^9.3.2",
    "updates": "^13.0.4"
  },
  "exports": {
    ".": "./index.js",
    "./lib": "./lib/index.js",
    "./package.json": "./package.json"
  }
}
