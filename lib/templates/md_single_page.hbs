<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>{{ pageTitle }}</title>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.4.1/milligram.css"> -->
  <!-- <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"> -->
  <link href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.5.0/build/styles/tokyo-night-light.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <style type="text/css">
    ul, ol {
      margin: 0;
      padding: 0;
    }

    #mdod-mdsp {
      margin: 32px auto;
      max-width: 1100px;
    }

    #mdod-mdsp h2 {
      border-top: 1px solid #ccc;
    }

    #mdod-mdsp-header {
      text-align: center;
      margin: 1rem 0.5rem;
      border: 1px solid #ccc;
      padding-top: 1rem;
    }

    #mdod-mdsp-header-details {
      display: flex;
      flex-direction: row;
      list-style-type: none;
      margin: 0 1rem;
    }

    #mdod-mdsp-header-details li {
      margin-right: 1rem;
    }

    #mdod-mdsp-header-details li p {
      display: inline-block;
    }

    pre {
      background: #f0f0f0;
      padding: 16px 8px;
      border-radius: 16px;
    }
  </style>
</head>

<body>
  <div id="mdod-mdsp">
    <div id="mdod-mdsp-header">
      <h1>Viewing: {{ pageTitle }}</h1>
      <ul id="mdod-mdsp-header-details">
        <li>
          <p>File Path</p>
          <p>{{ pagePath }}</p>
        </li>
        <li>
          <p>File Size (KB)</p>
          <p>~{{ pageSizeKB }}</p>
        </li>
      </ul>
    </div>
    <ol id="mdod-mdsp-breadcrumbs">
      {{#breadcrumbs}}
      {{#each breadcrumbs}}
        <li>
          <a alt="{{ this.alt }}" href="{{ this.url }}">{{ this.title }}</a>
        </li>
      {{/each}}
      {{/breadcrumbs}}
    </ol>
    <div id="mdod-mdsp-content">
      {{{ pageContent }}}
    </div>
  </div>
</body>
</html>
